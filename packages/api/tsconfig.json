{
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable", "dom"],
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
